{
  "name": "event-matching-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "apply-local-env": "vercel env pull .env --environment development",
    "lint": "run-p --continue-on-error --print-labepreviewl lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "next lint",
    "lint:secretlint": "secretlint --maskSecrets --secretlintignore .gitignore '**/*'",
    "fix": "run-s --continue-on-error --print-label fix:*",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "next lint --fix",
    "db-local": "run-s --continue-on-error --print-label db-local:*",
    "db-local:generate": "npx prisma generate",
    "db-local:reset": "vercel env pull .env --environment development && npx prisma migrate reset --force # データベース内容を削除し + データ挿入",
    "db-preview:migrate": "vercel env pull .env --environment preview && npx prisma migrate dev --name migrate # マイグレーションファイルを生成 + データベースに適用 開発が終了した最後に実施。preview環境に適用する",
    "db-production:deploy": "vercel env pull .env --environment production && npx prisma migrate reset --force # 開発段階のみ。リリースしたら使わない",
    "prisma-studio": "npx prisma studio"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts # データベースに初期データを挿入 ここを消すとdb-db:resetで初期データが投入されなくなる"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^5.15.20",
    "@mui/material": "^5.15.20",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.4.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@stripe/react-stripe-js": "^2.3.1",
    "@stripe/stripe-js": "^2.1.11",
    "@trpc/client": "^10.41.0",
    "@trpc/react-query": "^10.41.0",
    "@trpc/server": "^10.41.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.11",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^1.41.0",
    "cloudinary-build-url": "^0.2.4",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.288.0",
    "next": "13.5.6",
    "next-auth": "^4.24.3",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.9.6",
    "react": "^18",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "react-images-uploading": "^3.1.7",
    "stripe": "^14.3.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@next/eslint-plugin-next": "^14.2.4",
    "@playwright/test": "^1.45.0",
    "@prisma/generator-helper": "^5.15.0",
    "@secretlint/secretlint-rule-preset-recommend": "^8.2.4",
    "@types/bcrypt": "^5.0.1",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.13",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "allure-playwright": "^3.0.0-beta.3",
    "autoprefixer": "^10",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-plugin-next": "^0.0.0",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "prisma": "^5.4.2",
    "prisma-erd-generator": "^1.11.2",
    "secretlint": "^8.2.4",
    "tailwindcss": "^3",
    "ts-node": "^10.9.2",
    "typescript": "5.4.x"
  }
}
